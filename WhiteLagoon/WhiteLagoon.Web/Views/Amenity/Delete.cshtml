@model AmenityVM

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="@Model.Amenity.Id" hidden />
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger text-decoration-none"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.VillaList" class="form-select border shadow" disabled>
                        <option>Choose Villa Name</option>
                    </select>
                    <label asp-for="@Model.Amenity.VillaId" class="ms-2"></label>
                    <span asp-validation-for="@Model.Amenity.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <textarea asp-for="@Model.Amenity.Name" rows="" readonly class="form-control"></textarea>
                    <label asp-for="@Model.Amenity.Name" class="ms-2"></label>
                    <span asp-validation-for="@Model.Amenity.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Amenity.Description" readonly class="form-control border shadow" />
                    <label asp-for="@Model.Amenity.Description" class="ms-2"></label>
                    <span asp-validation-for="@Model.Amenity.Description" class="text-danger"></span>
                </div>

                <div class="row pt-2 justify-content-end">
                    <div class="col-4 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-4 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}