
@{
    var status = Context.Request.Query["status"];

    string pendingStatus = string.Empty;
    string approvedStatus = string.Empty;
    string checkInStatus = string.Empty;
    string completedStatus = string.Empty;
    string canceledStatus = string.Empty;

    string classForLiTag = "text-white bg-success";

    switch (status){
        case StaticDetail.StatusPending:
            pendingStatus = classForLiTag;
            break;
        case StaticDetail.StatusApproved:
            approvedStatus = classForLiTag;
            break;
        case StaticDetail.StatusCheckedIn:
            checkInStatus = classForLiTag;
            break;
        case StaticDetail.StatusCompleted:
            completedStatus = classForLiTag;
            break;
        case StaticDetail.StatusCanceled:
            canceledStatus = classForLiTag;
            break;
        default:
            break;
    }
}


<div class="w-100 card border border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-header">
                <h2 class="text-white text-center py-2">Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class="list-group list-group-horizontal">
                <a class="text-decoration-none " asp-controller="Booking" asp-action="Index" asp-route-status="@StaticDetail.StatusPending">
                    <li class="list-group-item @pendingStatus">@StaticDetail.StatusPending</li>
                </a>
                <a class="text-decoration-none " asp-controller="Booking" asp-action="Index" asp-route-status="@StaticDetail.StatusApproved">
                    <li class="list-group-item @approvedStatus">@StaticDetail.StatusApproved</li>
                </a>
                <a class="text-decoration-none " asp-controller="Booking" asp-action="Index" asp-route-status="@StaticDetail.StatusCheckedIn">
                <li class="list-group-item @checkInStatus">@StaticDetail.StatusCheckedIn</li>
                </a>
                <a class="text-decoration-none " asp-controller="Booking" asp-action="Index" asp-route-status="@StaticDetail.StatusCompleted">
                    <li class="list-group-item @completedStatus">@StaticDetail.StatusCompleted</li>
                </a>
                <a class="text-decoration-none " asp-controller="Booking" asp-action="Index" asp-route-status="@StaticDetail.StatusCanceled">
                    <li class="list-group-item @canceledStatus">@StaticDetail.StatusCanceled</li>
                </a>
            </ul>
        </div>
        <table id="tblBookings" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Check In Date</th>
                    <th>Nights</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/booking.js"></script>
}